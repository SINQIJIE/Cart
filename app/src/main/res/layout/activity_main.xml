                   android:id="@+id/textView18"
                   android:layout_width="119dp"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="1dp"
                   android:layout_marginTop="1dp"
                   android:background="#FFFFFF"
                   android:text="45.00"
                   android:textSize="20sp" />

               <TextView
